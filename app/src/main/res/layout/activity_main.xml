<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        tools:context=".view.MainActivity"
        android:background="@drawable/bottom_bg"
        >
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="@drawable/top_bg"
    >
        <EditText
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:background="@drawable/top_search_box"
                >
        </EditText>
        <ImageView
                android:id="@+id/search"
                android:layout_width="46dp"
                android:layout_height="match_parent"
                android:background="@drawable/top_search_icon"
                android:onClick="selectByName"
        >
        </ImageView>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
    >
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:id="@+id/food"
                    android:onClick="toGoodsFood"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    app:sb_color_unpressed="#1296db"
                    app:sb_radius="30dp"
                    android:textSize="25dp"
                    android:text="食品区"
                    app:sb_shape_type="round"/>

            <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:id="@+id/daily"
                    android:onClick="toGoodsDaily"
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:sb_color_unpressed="#1296db"
                    android:gravity="center"
                    android:textSize="25dp"
                    android:text="日用品"
                    app:sb_radius="30dp"
                    app:sb_shape_type="round"/>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:sb_color_unpressed="#1296db"
                    app:sb_radius="30dp"
                    app:sb_shape_type="round"/>

            <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:sb_color_unpressed="#1296db"
                    app:sb_radius="30dp"
                    app:sb_shape_type="round"/>
        </LinearLayout>

        <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

            <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:sb_color_unpressed="#1296db"
                    app:sb_radius="30dp"
                    app:sb_shape_type="round"/>

            <com.xuexiang.xui.widget.button.shadowbutton.ShadowButton
                    android:layout_width="64dp"
                    android:layout_height="match_parent"
                    android:layout_margin="16dp"
                    android:layout_weight="1"
                    app:sb_color_unpressed="#1296db"
                    app:sb_radius="30dp"
                    app:sb_shape_type="round"
                />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/home"
                android:onClick="toHome"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/add_cart"
                android:onClick="toCar"
        />
        <ImageView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/weather"
                android:onClick="toWeather"
        />
        <ImageView
                android:id="@+id/user"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/account"
                android:onClick="toUser"
        />

    </LinearLayout>


</LinearLayout>