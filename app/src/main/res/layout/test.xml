<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
              android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              tools:ignore="MissingDefaultResource"
              android:orientation="vertical">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:scrollbars="none">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

            <TextView
                    style="@style/TextStyle.Content"
                    android:text="标准输入框样式：" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:id="@+id/login_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:hint="标准输入框样式"
                        app:met_clearButton="true"
                        app:met_maxCharacters="9" />


                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                        android:id="@+id/bt_disenable"
                        style="@style/RoundButton.Auto"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="不允许输入" />
            </LinearLayout>

            <TextView
                    style="@style/TextStyle.Content"
                    android:text="校验输入框：" />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="horizontal">

                <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                        android:id="@+id/et_check"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:hint="手动验证"
                        app:met_floatingLabel="highlight"
                        app:met_maxCharacters="15" />

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                        android:id="@+id/bt_check_vaild"
                        style="@style/RoundButton.Auto"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:text="手动校验" />
            </LinearLayout>

            <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
                    android:id="@+id/et_auto_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:hint="自动验证"
                    app:met_autoValidate="true"
                    app:met_floatingLabel="highlight"
                    app:met_maxCharacters="15" />

            <EditText
                    style="@style/EditText.Normal"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    android:singleLine="true" />

            <com.xuexiang.xui.widget.edittext.ValidatorEditText
                    style="@style/EditText"
                    android:layout_width="300dp"
                    android:layout_margin="10dp"
                    android:singleLine="true"

                    app:vet_tipPosition="top" />
            <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:id="@+id/clearEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp" />

            <com.xuexiang.xui.widget.edittext.ClearEditText
                    android:id="@+id/clearEditText1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:cet_clearIconSize="@dimen/default_clear_icon_size"
                    android:layout_margin="5dp" />
            <com.xuexiang.xui.widget.edittext.PasswordEditText
                    android:id="@+id/login_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:hint="输入密码"
                    android:inputType="textPassword"
                    android:textAlignment="viewStart"
                    app:pet_enableIconAlpha="true" />


            <com.xuexiang.xui.widget.edittext.PasswordEditText
                    android:id="@+id/input_password2"
                    fontPath="fonts/Roboto-Thin.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:hint="重复密码"
                    android:inputType="textPassword"
                    android:textAlignment="viewStart"
                    app:pet_enableIconAlpha="true"
                    app:pet_hoverShowsPw="true"

            />

        </LinearLayout>

    </ScrollView>

</LinearLayout>