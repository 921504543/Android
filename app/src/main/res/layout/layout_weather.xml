<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@drawable/top_bg"
        android:id="@+id/xiangqing"
        android:orientation="horizontal"
        android:layout_height="48dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="天气详情"
            android:textSize="19dp"
            android:textColor="#ffffff"
            android:gravity="center"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/xiangqing"
        android:id="@+id/weather_main"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/weather_search"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="300dp"
                android:layout_marginLeft="30dp"
                android:hint="请输入你要查询的天气"
                android:id="@+id/search"
                android:background="@drawable/top_search_box"
                android:layout_height="45dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="8dp"
                android:onClick="search"
                android:src="@drawable/top_search_icon"
                android:layout_height="wrap_content" />
        </LinearLayout>




    </LinearLayout>


    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_marginTop="8dp"
                  android:layout_height="wrap_content">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/city"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#1296db"
                    android:textSize="50sp"
                    android:layout_height="wrap_content" />

        </FrameLayout>
    </LinearLayout>
    
    

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="20dp"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/one"
                style="@style/today"/>
        <ImageView
                android:layout_width="match_parent"
                android:background="#2E8b57"
                android:layout_height="1dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/two"
                style="@style/today"/>
        <ImageView
                android:layout_width="match_parent"
                android:background="#2E8b57"
                android:layout_height="1dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/three"
                style="@style/today"/>
        <ImageView
                android:layout_width="match_parent"
                android:background="#2E8b57"
                android:layout_height="1dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/four"
                style="@style/today"/>
        <ImageView
                android:layout_width="match_parent"
                android:background="#2E8b57"
                android:layout_height="1dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/five"
                style="@style/today"/>
        <ImageView
                android:layout_width="match_parent"
                android:background="#2E8b57"
                android:layout_height="1dp" />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:id="@+id/six"
                style="@style/today"/>
    </LinearLayout>

    

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/suggest"
            android:text="聚合天气查询台"
            android:textSize="30dp"
            android:layout_marginLeft="70dp"
            android:textColor="#000000"
            android:layout_height="wrap_content" />
    </LinearLayout>




</LinearLayout>
